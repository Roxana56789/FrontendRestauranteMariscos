@{
    ViewData["Title"] = "Inicio";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: url("/images/fondo-mariscos.png") no-repeat center center fixed;
        background-size: cover;
    }

    .contenido {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        color: white;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
        flex-direction: column;
        text-align: center;
    }

        .contenido h1 {
            font-size: 3rem;
            margin-bottom: 10px;
        }

        .contenido p {
            font-size: 1.5rem;
        }

    .btn-menu {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #e63946;
        border: none;
        color: white;
        font-size: 1.2rem;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
    }

        .btn-menu:hover {
            background-color: #ff4d5a;
        }
</style>

<div class="contenido">
    <h1>Bienvenido a Comedor de Mariscos</h1>
    <p>Los mejores platillos frescos del mar, ven y disfruta</p>
    <a href="/Menu" class="btn-menu">Ver Menú</a>
</div>