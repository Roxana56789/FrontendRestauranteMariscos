@model UsuarioRegistroDTO

@{
    ViewData["Title"] = "Registrarse";
}

<style>
    body {
        background: url('/images/restaurante-bg.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
        max-width: 450px;
        margin: 80px auto;
        background: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0px 10px 30px rgba(0,0,0,0.3);
        text-align: center;
    }

    h2 {
        font-family: 'Georgia', serif;
        font-weight: bold;
        color: #7b1e20; /* tono vino elegante */
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 12px;
        font-size: 15px;
    }

    .btn-success {
        background: linear-gradient(135deg, #7b1e20, #b8860b);
        border: none;
        border-radius: 12px;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        transition: 0.3s ease;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #5c1417, #a7740a);
            transform: scale(1.05);
        }

    .text-center a {
        color: #7b1e20;
        font-weight: bold;
        text-decoration: none;
    }

        .text-center a:hover {
            text-decoration: underline;
        }

    .alert-danger {
        border-radius: 10px;
        padding: 12px;
        font-size: 14px;
    }
</style>


<div class="register-container">
    <h2>🍷 Crear Cuenta en Restaurante Mariscos 😋🍽️</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Registrar" method="post" class="mt-3">
        <div class="form-group mb-3">
            <label for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre completo" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Email">Correo Electrónico</label>
            <input asp-for="Email" class="form-control" placeholder="admin@gmail.com" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Password">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="********" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">Registrarse</button>

        <div class="mt-3 text-center">
            ¿Ya tienes cuenta? <a asp-controller="Auth" asp-action="Login">Iniciar sesión</a>
        </div>
    </form>
</div>
