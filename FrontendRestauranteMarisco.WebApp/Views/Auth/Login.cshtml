@model UsuarioLoginDTO

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="min-h-screen flex items-center justify-center p-4"
     style="background-image: url('/images/restaurante-bg.jpg'); background-size: cover; background-position: center;">

    <!-- Contenedor del Formulario (Card con efecto de cristal) -->
    <div class="w-full max-w-md bg-white/95 backdrop-blur-sm p-8 md:p-10 rounded-2xl shadow-2xl transition duration-500 hover:shadow-3xl border border-gray-100">

        <!-- Título -->
        <div class="text-center mb-8">
            <h2 class="text-3xl font-serif font-extrabold text-[#7b1e20] tracking-tight">
                🍷 Bienvenido al Marisco
            </h2>
            <p class="text-gray-500 mt-2">Ingresa a tu cuenta de administrador.</p>
        </div>

        <!-- Mensaje de Error (Usando clases de Tailwind) -->
        @if (ViewBag.Error != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-xl mb-4 text-sm font-medium" role="alert">
                @ViewBag.Error
            </div>
        }

        <!-- Formulario de Login -->
        <form asp-action="Login" method="post" class="space-y-6">

            <!-- Campo de Correo -->
            <div>
                <label for="Email" class="block text-sm font-medium text-gray-700 text-left mb-1">Correo Electrónico</label>
                <input asp-for="Email"
                       class="w-full p-3 border border-gray-300 rounded-xl focus:ring-orange-500 focus:border-orange-500 transition duration-150 shadow-sm"
                       placeholder="admin@ejemplo.com" required />
                <span asp-validation-for="Email" class="text-sm text-red-600 mt-1 block text-left"></span>
            </div>

            <!-- Campo de Contraseña -->
            <div>
                <label for="Password" class="block text-sm font-medium text-gray-700 text-left mb-1">Contraseña</label>
                <input asp-for="Password"
                       type="password"
                       class="w-full p-3 border border-gray-300 rounded-xl focus:ring-orange-500 focus:border-orange-500 transition duration-150 shadow-sm"
                       placeholder="********" required />
                <span asp-validation-for="Password" class="text-sm text-red-600 mt-1 block text-left"></span>
            </div>

            <!-- Botón de Ingresar -->
            <button type="submit"
                    class="w-full py-3 rounded-xl text-white font-bold text-lg
                           bg-gradient-to-r from-[#7b1e20] to-[#b8860b]
                           hover:from-[#5c1417] hover:to-[#a7740a]
                           transition duration-300 transform hover:scale-[1.01] shadow-lg hover:shadow-xl">
                Ingresar
            </button>

            <!-- Enlace de Registro -->
            <div class="text-center text-sm mt-4">
                ¿No tienes cuenta?
                <a asp-controller="Auth" asp-action="Registrar" class="font-semibold text-[#7b1e20] hover:text-orange-600 transition duration-150">
                    Regístrate aquí
                </a>
            </div>
        </form>
    </div>
</div>