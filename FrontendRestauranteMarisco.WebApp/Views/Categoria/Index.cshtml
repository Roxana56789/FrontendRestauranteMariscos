@model IEnumerable<FrontendRestauranteMarisco.WebApp.DTOs.CategoriaDTOS.CategoriaRespuestaDTO>

@{
    ViewData["Title"] = "Listado de Categorias";
}
<style>
    body {
        background: url('/images/restaurante-bg.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .crud-container {
        max-width: 900px; /* Más ancho para la tabla Index */
        margin: 50px auto;
        background: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0px 10px 30px rgba(0,0,0,0.3);
    }

    h2 {
        font-family: 'Georgia', serif;
        font-weight: bold;
        color: #7b1e20; /* tono vino elegante */
        margin-bottom: 20px;
    }

    /* Estilos de Tabla */
    .table {
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .table thead {
            background-color: #7b1e20; /* Color vino */
            color: #fff;
        }

            .table thead th {
                border: none;
                padding: 15px;
            }

        .table tbody tr {
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            border-radius: 10px;
        }

        .table tbody td {
            padding: 15px;
            vertical-align: middle;
        }

    /* Botones de Acción */
    .btn-primary {
        background: linear-gradient(135deg, #7b1e20, #b8860b);
        border: none;
        border-radius: 12px;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5c1417, #a7740a);
            transform: scale(1.05);
        }

    .btn-action, .btn-danger-custom {
        border: none;
        margin: 0 5px;
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 14px;
        color: white;
        text-decoration: none;
        display: inline-block;
    }

    .btn-action {
        background-color: #b8860b; /* Dorado */
    }

        .btn-action:hover {
            background-color: #a7740a;
        }

    .btn-danger-custom {
        background-color: #a00000; /* Rojo oscuro para eliminar */
    }

        .btn-danger-custom:hover {
            background-color: #7b0000;
        }

    .alert-danger {
        border-radius: 10px;
        padding: 12px;
        font-size: 14px;
    }
</style>

<div class="crud-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gestión de @ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">➕ Crear Nueva Categoría</a>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-action">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger-custom">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>